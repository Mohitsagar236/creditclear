# Credit Risk Assessment - Environment Variables
# Copy this file to .env and update the values as needed

# Database Configuration
POSTGRES_DB=creditrisk
POSTGRES_USER=creditrisk
POSTGRES_PASSWORD=creditrisk123
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://creditrisk:creditrisk123@db:5432/creditrisk

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://cache:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Celery Configuration
CELERY_BROKER_URL=redis://cache:6379/0
CELERY_RESULT_BACKEND=redis://cache:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC

# MLflow Configuration
MLFLOW_TRACKING_URI=sqlite:///app/data/mlflow.db
MLFLOW_ARTIFACT_ROOT=/app/data/mlruns
MLFLOW_HOST=0.0.0.0
MLFLOW_PORT=5000

# Model Configuration
MODEL_PATH=/app/data/models/
DEFAULT_MODEL=xgboost_model
MODEL_VERSION=v1.0
PREDICTION_THRESHOLD=0.5
SHAP_CACHE_SIZE=1000

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_APP_TITLE=Credit Risk Assessment
VITE_APP_VERSION=1.0.0
VITE_ENABLE_ANALYTICS=false

# Development Configuration
ENVIRONMENT=development
DEBUG=true
RELOAD=true

# Production Configuration (uncomment for production)
# ENVIRONMENT=production
# DEBUG=false
# RELOAD=false
# API_WORKERS=8
# LOG_LEVEL=WARNING

# Security Configuration (change in production)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=[".csv", ".xlsx", ".json"]

# Monitoring and Logging
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_FORMAT=json
LOG_FILE=/app/logs/app.log
MAX_LOG_SIZE=100MB
BACKUP_COUNT=5

# Email Configuration (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
FROM_EMAIL=noreply@creditrisk.local

# External Services (optional)
CREDIT_BUREAU_API_URL=
CREDIT_BUREAU_API_KEY=
NOTIFICATION_SERVICE_URL=
